<% layout('./layout/main') -%>

<main>
    <div class="container">
        <div class="row">
            <div class="header center">
                <h3>Personal</h3>
            </div>
            <form action="" id="personal_form" class="col s8 offset-s2 m6 offset-m3">
                <div class="personal_image center col s12">
                    <% if (user.photo) {%>
                        <img src="<%= user.photo %>" alt="">
                    <% } else { %>
                        <img src="/images/no-image.png" alt="">
                    <% } %>
                </div>
                <div class="input-field col s12">
                    <input id="login" type="text" name="login" value="<%=user.login%>">
                    <label for="login">Login</label>
                </div>
                <div class="file-field input-field col s12">
                    <div class="btn">
                        <span>Photo</span>
                        <input type="file" name="photo" accept="image/jpeg, image/png, image/jpg">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate"
                               type="text"
                               name="photo_name">
                    </div>
                </div>
                <div class="col s12 center">
                    <button class="btn-large">Save</button>
                </div>
            </form>
        </div>
    </div>
</main>

<script src="/js/personal.js"></script>