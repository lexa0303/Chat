<% layout('./layout/main') -%>

<main class="main">
    <div class="container">
        <div class="row">
            <ul class="collection" id="messages"></ul>
        </div>
    </div>
</main>
<footer class="footer">
    <div class="progress" id="history_loader">
        <div class="indeterminate"></div>
    </div>
    <div class="container">
        <div class="row">
            <form action="" id="message_form">
                <div class="col s12">
                    <div class="input-field col s12">
                        <input class="validate" required type="text" name="message" id="message">
                        <label for="message">Message</label>
                    </div>
                    <button class="btn" type="submit">Send
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</footer>
<script src="/js/chat.js"></script>